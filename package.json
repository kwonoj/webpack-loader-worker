{
  "name": "webpack-loader-worker",
  "version": "0.0.1",
  "description": "Execute webpack loader in worker threads",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kwonoj/webpack-loader-worker.git"
  },
  "keywords": [
    "webpack",
    "loader",
    "thread",
    "worker"
  ],
  "author": "OJ Kwon <kwon.ohjoong@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kwonoj/webpack-loader-worker/issues"
  },
  "homepage": "https://github.com/kwonoj/webpack-loader-worker#readme",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e",
      "pre-commit": "lint-staged",
      "pre-push": "npm-run-all lint:* prepare test:unit"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "scripts": {
    "prepare": "echo",
    "test:unit": "jest --config jest.json --coverage",
    "lint:code": "eslint --ext .ts ./src",
    "lint:circular": "depcruise --validate .dependency-cruiser.json -x \"^node_modules\" src",
    "build": "tsc -b --verbose ./src/tsconfig.cjs.json ./src/tsconfig.types.json",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/debug": "^4.1.5",
    "@types/jest": "^24.0.23",
    "@types/loader-runner": "^2.2.3",
    "@types/loader-utils": "^1.1.3",
    "@types/nanoid": "^2.1.0",
    "@types/webpack": "^4.41.0",
    "@typescript-eslint/eslint-plugin": "^2.9.0",
    "@typescript-eslint/parser": "^2.9.0",
    "conventional-changelog": "^3.1.15",
    "css-loader": "^3.2.0",
    "dependency-cruiser": "^5.4.0",
    "eslint": "^6.7.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "jest-spin-reporter": "^2.0.0",
    "less": "^3.10.3",
    "less-loader": "^5.0.0",
    "lint-staged": "^9.5.0",
    "mini-css-extract-plugin": "^0.8.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.2",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  },
  "dependencies": {
    "comlink": "^4.1.0",
    "debug": "^4.1.1",
    "jest-worker": "^24.9.0",
    "loader-runner": "^3.1.0",
    "loader-utils": "^1.2.3",
    "nanoid": "^2.1.7",
    "rxjs": "^6.5.3"
  },
  "files": [
    "dist/cjs/**/!(*.tsbuildinfo)",
    "dist/types/**/!(*.tsbuildinfo)",
    "src",
    "CHANGELOG.md",
    "LICENSE",
    "package.json",
    "README.md",
    "tsconfig.json"
  ]
}

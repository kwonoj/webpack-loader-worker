{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        //"plugin:@typescript-eslint/recommended", [todo]: enable
        "plugin:@typescript-eslint/eslint-recommended",
        "prettier/@typescript-eslint",
        "plugin:prettier/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "arrow-parens": [
            "error"
        ],
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": [
            "off"
        ],
        "require-await": [
            "error"
        ],
        "no-shadow": [
            "error"
        ],
        "sort-imports": [
            "error"
        ],
        "no-empty-function": [
            "error"
        ]
    }
}